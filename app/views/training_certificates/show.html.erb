<% content_for :breadcrumbs do %>
  <%= render 'shared/breadcrumbs', breadcrumbs: [
    { label: t('teams.label'), url: main_app.teams_path },
    { label: @training_certificate.team.name, url: main_app.team_path(@training_certificate.team) },
    { label: t('training_certificates.label_plural'), url: main_app.team_training_certificates_path(@training_certificate.team) },
    { label: @training_certificate.certificate_number }
  ] %>
<% end %>

<div class="container mx-auto my-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-slate-800"><%= t('training_certificates.certificate_details') %></h1>
    
    <div class="flex space-x-2">
      <% if @training_certificate.pdf_ready? %>
        <%= link_to t('training_certificates.buttons.download_pdf'), 
                    download_pdf_training_certificate_path(@training_certificate),
                    class: "btn btn-primary" %>
      <% end %>
      
      <% if can?(:manage, @training_certificate) %>
        <%= link_to t('training_certificates.buttons.regenerate_pdf'), 
                    regenerate_pdf_training_certificate_path(@training_certificate),
                    method: :post,
                    class: "btn btn-secondary" %>
                    
        <% if can?(:revoke, @training_certificate) && !@training_certificate.revoked? && !@training_certificate.expired? %>
          <%= button_to t('training_certificates.buttons.revoke'),
                      revoke_training_certificate_path(@training_certificate),
                      method: :post,
                      data: {
                        controller: "confirm",
                        confirm_title: t('training_certificates.confirm.revoke_title'),
                        confirm_message: t('training_certificates.confirm.revoke_message'),
                        confirm_button: t('training_certificates.buttons.revoke'),
                        action: "confirm#show"
                      },
                      class: "btn btn-danger" %>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Certificate Details -->
    <div class="md:col-span-2 bg-white rounded-lg shadow overflow-hidden">
      <div class="p-6 certificate-detail">
        <div class="text-center mb-8">
          <% if @training_certificate.training_program.logo.attached? %>
            <%= image_tag @training_certificate.training_program.logo.variant(resize: "200x200"), 
                          class: "mx-auto h-24 w-auto mb-4" %>
          <% end %>
          
          <h2 class="text-3xl font-bold mb-2"><%= t('training_certificates.certificate_of_completion') %></h2>
          <p class="text-lg text-gray-600 mb-6"><%= t('training_certificates.this_certifies_that') %></p>
          
          <h3 class="text-2xl font-bold mb-6">
            <%= "#{@training_certificate.membership.user_first_name} #{@training_certificate.membership.user_last_name}" %>
          </h3>
          
          <p class="text-lg text-gray-600 mb-4"><%= t('training_certificates.has_successfully_completed') %></p>
          
          <h3 class="text-2xl font-bold mb-6">
            <%= @training_certificate.training_program.name %>
          </h3>
          
          <% if @training_certificate.score.present? %>
            <p class="text-lg text-gray-600 mb-4">
              <%= t('training_certificates.with_grade', score: @training_certificate.score) %>
            </p>
          <% end %>
          
          <div class="flex justify-center space-x-8 mt-8 text-gray-600">
            <div>
              <p class="font-semibold"><%= t('training_certificates.fields.issued_at') %></p>
              <p><%= l(@training_certificate.issued_at, format: :long) %></p>
            </div>
            
            <% if @training_certificate.expires_at.present? %>
              <div>
                <p class="font-semibold"><%= t('training_certificates.fields.expires_at') %></p>
                <p><%= l(@training_certificate.expires_at, format: :long) %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Sidebar -->
    <div class="md:col-span-1 space-y-6">
      <!-- Certificate Info -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="p-4 bg-slate-800 text-white">
          <h3 class="font-semibold"><%= t('training_certificates.certificate_info') %></h3>
        </div>
        <div class="p-4 space-y-4">
          <div>
            <p class="text-sm text-gray-500"><%= t('training_certificates.fields.certificate_number') %></p>
            <p class="font-medium"><%= @training_certificate.certificate_number %></p>
          </div>
          
          <div>
            <p class="text-sm text-gray-500"><%= t('training_certificates.fields.status') %></p>
            <p class="certificate-status">
              <% if @training_certificate.expired? %>
                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                  <%= t('training_certificates.status.expired') %>
                </span>
              <% else %>
                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  <%= t('training_certificates.status.active') %>
                </span>
              <% end %>
            </p>
          </div>
          
          <% if @training_certificate.expires_at.present? && !@training_certificate.expired? && @training_certificate.days_until_expiration < 30 %>
            <div class="certificate-warning p-3 bg-yellow-50 border border-yellow-200 rounded-md">
              <p class="text-sm text-yellow-700">
                <strong><%= t('training_certificates.certificate_expires_soon') %></strong>
              </p>
              <p class="text-sm text-yellow-600">
                <%= t('training_certificates.days_remaining', count: @training_certificate.days_until_expiration) %>
              </p>
              <% if can?(:create, TrainingCertificate) %>
                <%= link_to t('training_certificates.buttons.renew_now'), 
                            new_team_training_program_training_certificate_path(@training_certificate.team, @training_certificate.training_program, renew: @training_certificate.id),
                            class: "mt-2 text-sm text-yellow-700 font-medium hover:text-yellow-900" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- PDF Status -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="p-4 bg-slate-800 text-white">
          <h3 class="font-semibold"><%= t('training_certificates.pdf_status.title') %></h3>
        </div>
        <div class="p-4 pdf-status">
          <% case @training_certificate.pdf_status %>
          <% when 'processing' %>
            <div class="flex items-center space-x-2">
              <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-blue-500"></div>
              <p><%= t('training_certificates.pdf_status.processing') %></p>
            </div>
            <p class="text-sm text-gray-500 mt-2"><%= t('training_certificates.pdf_status.processing_message') %></p>
          <% when 'completed' %>
            <div class="flex items-center space-x-2">
              <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <p><%= t('training_certificates.pdf_status.completed') %></p>
            </div>
            <p class="text-sm text-gray-500 mt-2"><%= t('training_certificates.pdf_status.completed_message') %></p>
            <%= link_to t('training_certificates.buttons.download_pdf'), 
                        download_pdf_training_certificate_path(@training_certificate),
                        class: "mt-3 btn btn-sm btn-primary" %>
          <% when 'failed' %>
            <div class="flex items-center space-x-2">
              <svg class="h-5 w-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <p><%= t('training_certificates.pdf_status.failed') %></p>
            </div>
            <p class="text-sm text-gray-500 mt-2"><%= t('training_certificates.pdf_status.failed_message') %></p>
            <% if @training_certificate.pdf_error.present? %>
              <div class="mt-2 p-2 bg-red-50 rounded text-xs text-red-700 font-mono">
                <%= @training_certificate.pdf_error %>
              </div>
            <% end %>
            <%= link_to t('training_certificates.buttons.retry_generation'), 
                        regenerate_pdf_training_certificate_path(@training_certificate),
                        method: :post,
                        class: "mt-3 btn btn-sm btn-secondary" %>
          <% else %>
            <div class="flex items-center space-x-2">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <p><%= t('training_certificates.pdf_status.pending') %></p>
            </div>
            <p class="text-sm text-gray-500 mt-2"><%= t('training_certificates.pdf_status.pending_message') %></p>
            <%= link_to t('training_certificates.buttons.generate_pdf'), 
                        regenerate_pdf_training_certificate_path(@training_certificate),
                        method: :post,
                        class: "mt-3 btn btn-sm btn-secondary" %>
          <% end %>
        </div>
      </div>
      
      <!-- Verification -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="p-4 bg-slate-800 text-white">
          <h3 class="font-semibold"><%= t('training_certificates.verification.title') %></h3>
        </div>
        <div class="p-4 verification">
          <p class="text-sm text-gray-500 mb-2"><%= t('training_certificates.verification.description') %></p>
          
          <div class="mb-4">
            <p class="text-sm text-gray-500"><%= t('training_certificates.verification.code') %></p>
            <p class="font-medium"><%= @training_certificate.verification_code %></p>
          </div>
          
          <div class="flex justify-center">
            <img src="<%= @training_certificate.verification_qr_code(size: 150) %>" 
                 alt="QR Code" 
                 class="qr-code h-32 w-32">
          </div>
          
          <p class="text-xs text-gray-500 text-center mt-2">
            <%= t('training_certificates.verification.scan_to_verify') %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>