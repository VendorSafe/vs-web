<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-slate-800 mb-2"><%= t('training_certificates.verification.page_title') %></h1>
      <p class="text-gray-600"><%= t('training_certificates.verification.page_description') %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="p-6">
        <% if @training_certificate.present? %>
          <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center p-2 bg-green-100 rounded-full mb-4">
              <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            
            <h2 class="text-2xl font-bold text-green-600 mb-2"><%= t('training_certificates.verification.valid_certificate') %></h2>
            <p class="text-gray-600"><%= t('training_certificates.verification.certificate_authentic') %></p>
          </div>
          
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t('training_certificates.certificate_details') %></h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <dl class="space-y-4">
                  <div>
                    <dt class="text-sm font-medium text-gray-500"><%= t('training_certificates.fields.certificate_number') %></dt>
                    <dd class="mt-1 text-sm text-gray-900"><%= @training_certificate.certificate_number %></dd>
                  </div>
                  
                  <div>
                    <dt class="text-sm font-medium text-gray-500"><%= t('training_certificates.fields.program') %></dt>
                    <dd class="mt-1 text-sm text-gray-900"><%= @training_certificate.training_program.name %></dd>
                  </div>
                  
                  <div>
                    <dt class="text-sm font-medium text-gray-500"><%= t('training_certificates.fields.issued_by') %></dt>
                    <dd class="mt-1 text-sm text-gray-900"><%= @training_certificate.team.name %></dd>
                  </div>
                  
                  <div>
                    <dt class="text-sm font-medium text-gray-500"><%= t('training_certificates.fields.issued_at') %></dt>
                    <dd class="mt-1 text-sm text-gray-900"><%= l(@training_certificate.issued_at, format: :long) %></dd>
                  </div>
                </dl>
              </div>
              
              <div>
                <dl class="space-y-4">
                  <div>
                    <dt class="text-sm font-medium text-gray-500"><%= t('training_certificates.fields.recipient') %></dt>
                    <dd class="mt-1 text-sm text-gray-900">
                      <%= "#{@training_certificate.membership.user_first_name} #{@training_certificate.membership.user_last_name}" %>
                    </dd>
                  </div>
                  
                  <% if @training_certificate.score.present? %>
                    <div>
                      <dt class="text-sm font-medium text-gray-500"><%= t('training_certificates.fields.score') %></dt>
                      <dd class="mt-1 text-sm text-gray-900"><%= @training_certificate.score %>%</dd>
                    </div>
                  <% end %>
                  
                  <div>
                    <dt class="text-sm font-medium text-gray-500"><%= t('training_certificates.fields.status') %></dt>
                    <dd class="mt-1 text-sm text-gray-900">
                      <% if @training_certificate.expired? %>
                        <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                          <%= t('training_certificates.status.expired') %>
                        </span>
                      <% else %>
                        <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                          <%= t('training_certificates.status.active') %>
                        </span>
                      <% end %>
                    </dd>
                  </div>
                  
                  <% if @training_certificate.expires_at.present? %>
                    <div>
                      <dt class="text-sm font-medium text-gray-500"><%= t('training_certificates.fields.expires_at') %></dt>
                      <dd class="mt-1 text-sm text-gray-900"><%= l(@training_certificate.expires_at, format: :long) %></dd>
                    </div>
                  <% end %>
                </dl>
              </div>
            </div>
          </div>
          
          <% if @training_certificate.pdf_ready? %>
            <div class="mt-6 text-center">
              <%= link_to t('training_certificates.buttons.download_pdf'), 
                          download_pdf_training_certificate_path(@training_certificate),
                          class: "btn btn-primary" %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center p-2 bg-red-100 rounded-full mb-4">
              <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </div>
            
            <h2 class="text-2xl font-bold text-red-600 mb-2"><%= t('training_certificates.verification.invalid_certificate') %></h2>
            <p class="text-gray-600"><%= t('training_certificates.verification.certificate_not_found') %></p>
          </div>
          
          <div class="mt-8 border-t border-gray-200 pt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t('training_certificates.verification.try_again') %></h3>
            
            <%= form_with url: verify_training_certificate_path, method: :get, local: true, class: "mt-4" do |form| %>
              <div class="flex">
                <%= form.text_field :verification_code, 
                                   placeholder: t('training_certificates.verification.enter_code'),
                                   class: "form-input flex-1 rounded-r-none" %>
                <%= form.submit t('training_certificates.verification.verify_button'), 
                               class: "btn btn-primary rounded-l-none" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="mt-8 text-center">
      <p class="text-sm text-gray-500">
        <%= t('training_certificates.verification.contact_info_html', email: 'support@example.com') %>
      </p>
    </div>
  </div>
</div>