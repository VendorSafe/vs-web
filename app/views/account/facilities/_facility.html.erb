<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :facilities %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: facility do %>
  <tr data-id="<%= facility.id %>">
    <%= render "shared/tables/checkbox", object: facility %>
    <td><%= render 'shared/attributes/text', attribute: :name, url: [:account, facility] %></td>
    <td><%= render 'shared/attributes/text', attribute: :other_attribute %></td>
    <td><%= render 'shared/attributes/text', attribute: :url %></td>
    <td><%= render 'shared/attributes/belongs_to', attribute: :membership %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, facility %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, facility], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, facility %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, facility], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(facility)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
