<% cancel_path ||= training_content.persisted? ? [:account, training_content] : [:account, @training_program, :training_contents] %>

<%= form_with model: training_content, url: (training_content.persisted? ? [:account, training_content] : [:account, @training_program, :training_contents]), local: true, class: 'form' do |form| %>
  <%= render "shared/limits/form", form: form, cancel_path: cancel_path do %>
    <%= render 'account/shared/forms/errors', form: form %>

    <% with_field_settings form: form do %>
      <%= render 'shared/fields/text_field', method: :title, options: {autofocus: true} %>
      <%= render 'shared/fields/trix_editor', method: :body %>
      <%= render 'shared/fields/text_field', method: :content_type %>
      <%= render 'shared/fields/date_and_time_field', method: :published_at %>
      <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <% end %>

    <div class="buttons">
      <%= form.submit (form.object.persisted? ? t('.buttons.update') : t('.buttons.create')), class: "button" %>
      <%= link_to t('global.buttons.cancel'), cancel_path, class: "button-secondary" %>
    </div>
  <% end %>
<% end %>
