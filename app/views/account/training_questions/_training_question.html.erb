<% training_content = @training_content || @training_content %>
<% context ||= training_content %>
<% collection ||= :training_questions %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: training_question do %>
  <tr data-id="<%= training_question.id %>">
    <%= render "shared/tables/checkbox", object: training_question %>
    <td><%= render 'shared/attributes/text', attribute: :title, url: [:account, training_question] %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, training_question %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, training_question], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, training_question %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, training_question], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(training_question)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
